modal.modal.vault-modal.vault-modal-flexible-height#move_files_to_box_modal(
  ng-class='{ "active": modal.isOpen("move-files-to-box-modal") }'
)
  div.vault-modal-inner
    a.close(
      href
      ng-click="modal.close()"
      tooltip="#{t('vaults.move_files_to_box_modal.close')}"
      tooltip-placement="top"
    )
    .modal-header
      h3.text-light = t('vaults.move_files_to_box_modal.title')

    .modal-section.vaults-list-section
      vaults-slider(vaults='vaults' on-select='onVaultSelect')

    .modal-section.vaults-list-section
      vault-boxes(
        manageable='false'
        selected-box='selectedBox'
        boxes='boxes'
        on-select-callback='onBoxSelect'
        horizontally-scrollable='false'
      )
    .modal-actions
      button(ng-click='onMoveToVault()')
        = t('vaults.move_files_to_box_modal.move')
