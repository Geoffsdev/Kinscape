= form_for :session, url: session_path do |form|
  = hidden_field_tag :invitation_id, params[:invitation_id]
  .text-field
    = form.label :email
    = form.text_field :email, type: 'email'

  .password-field
    = form.label :password
    = form.password_field :password

  .submit-field
    = form.submit

  .other-links
    - if Clearance.configuration.allow_sign_up?
      / = link_to t('.sign_up'), sign_up_path
    = link_to t('.forgot_password'), new_password_path
    = link_to t('.sign_up'), sign_up_path(invitation_id: params[:invitation_id])
    - if @user && @user.confirmed_at.nil?
      = link_to t('.resend_instructions'),
              resend_verification_instructions_path(email: @user.email, invitation_id: params[:invitation_id])
